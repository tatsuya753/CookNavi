<div class="container text-center">
  <div class="text-center py-5">
    <h2>新規登録</h2>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
  </div>

  <div class="field row justify-content-center my-3">
    <%= f.label "名前", class: "col-lg-3" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-lg-3" %>
  </div>

  <div class="field row justify-content-center my-3">
    <%= f.label :email, class: "col-lg-3" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "col-lg-3" %>
  </div>

  <div class="field row justify-content-center my-3">
    <%= f.label "パスワード(6文字以上)", class: "col-lg-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-3" %>
  </div>

  <div class="field row justify-content-center my-3">
    <%= f.label :password_confirmation, class: "col-lg-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-3" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success my-3"  %>
  </div>
<% end %>
<div class="row justify-content-center py-3">
        <h5 class="mb-5 mr-3", style="width:270px; background-color:#d3d3d3;">会員登録がお済みでない方は</h5>
        <%= render "public/shared/links" %>
        </div>

</div>