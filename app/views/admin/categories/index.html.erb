<div class="container text-center">
  <div class="row justify-content-center">
    <h4 class="col-12 my-5">ジャンル一覧・追加</h4>

    <div class="col-12 mb-3">
      <%= form_with model: @category,url: admin_categories_path do |category| %>
        <%= category.label "カテゴリ名" %>
        <%= category.text_field :name %>
        <%= category.submit "新規登録", class:"btn btn-success" %>
      <% end %>
    </div>

      <table class='table mt-5 w-50 mx-auto'>
        <thead style="background-color:#d3d3d3;">
          <tr>
            <th>カテゴリ</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <% @categories.each do |category| %>
        <tbody>
          <th><%= category.name %></th>
          <th><%= link_to "編集する", edit_admin_category_path(category), class:"btn btn-success py-0" %></th>
        </tbody>
        <% end %>
      </table>

  </div>
</div>